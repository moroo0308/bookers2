
<div class="body">
	<div class="container">
		<div class="row">
			<h2>Editing Book</h2>
			<%= form_for(@book) do |f| %>
			<h4>Title</h4>
			<%= f.text_field :title, class: "book_title" %>
			<h4>Opinion</h4>
			<%= f.text_area :opinion, class: "book_body" %>
			<%= f.submit 'Update Book', class: "btn btn-primary btn-block" %>
			<% end %>
			<%= link_to "show", book_path(@book), class: "book_#{@book.id}"  %>
			<%= link_to "back", books_path, class: "back" %>
		</div>
	</div>
</div>

<div class="body">
	<div class="container">
		<div class="row">
			<div class="col-lg-3">
				<h2>User info</h2>
				<% if user_signed_in? %>
				<%= current_user.name %>
				<% end %>

				<h2>New book</h2>
				<%= form_for(@book) do |f| %>
				<div class="field"><h4>Title</h4>
					<%= f.text_field :title, class: "book_title" %>
				</div>
				<div class="field"><h4>Opinion</h4>
					<%= f.text_area :opinion, class: "book_opinion" %>
				</div>
				<div class="action"><%= f.submit 'Create Book' %>
				</div>
				<% end %>
			</div>
			<div class="col-lg-9">
				<h2>Books</h2>
				<table class="table table-striped">
					<thead>
						<tr>
							<th>Title</th>
							<th>Opinion</th>
						</tr>
					</thead>
					<tbody>
						<% @books.each do |book| %>
						<tr>
							<td><%= book.title %></td>
							<td><%= book.opinion %></td>
						</tr>
						<% end %>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>
<div>
<h2>Users info</h2>
<h2>New book</h2>
		<%= form_for(@book) do |f| %>
		<div class="field"><h4>Title</h4>
		<%= f.text_field :title, class: "book_title" %></div>

		<div class="field"><h4>Opinion</h4>
		<%= f.text_area :opinion, class: "book_opinion" %></div>
		<div class="action"><%= f.submit 'Create Book' %></div>
		<% end %>
</div>
<div>
	<h2>Books</h2>
	
	<table>
		<thead>
			<tr>
				<th>Title</th>
				<th>Opinion</th>
			</tr>
		</thead>
		<tbody>
			<% @books.each do |book| %>
			<tr>
				<td><%= book.title %></td>
				<td><%= book.opinion %></td>
			</tr>
			<% end %>
		</tbody>
	</table>
</div>


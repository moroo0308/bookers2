<div class="body">
	<div class="container">
		<div class="row">
			<%= render 'users/list', book: @book, user: current_user %>
			<div class="col-lg-9">
				<h2>Books</h2>
				<table class="table table-striped">
					<thead>
						<tr>
							<th></th>
							<th>Title</th>
							<th>Opinion</th>
						</tr>
					</thead>
					<tbody>
						<% @books.each do |book| %>
						<tr>
							<td><%= attachment_image_tag book.user, :image, :fill, 50, 50, format: 'jpeg' %></td>
							<td><%= link_to book.title, book_path(book) %></td>
							<td><%= book.opinion %></td>
						</tr>
						<% end %>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>

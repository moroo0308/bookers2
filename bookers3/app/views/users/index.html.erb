<div class="body">
	<div class="container">
		<div class="row">
			<%= render 'users/list', book: @book, user: current_user %>
			<div class="col-lg-9">
				<h2>Users</h2>
				<table class="table table-striped">
					<thead>
						<tr>
							<th></th>
							<th>name</th>
						</tr>
					</thead>
					<tbody>
						<% @users.each do |user| %>
						<tr>
							<td><%= attachment_image_tag user, :image, :fill, 50, 50, format: 'jpeg' %></td>
							<td><%= user.name %></td>
							<td><%= link_to "show", user_path(user) %></td>
						</tr>
						<% end %>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>
<br>


<div class="body">
	<div class="container">
		<div class="row">
			<%= render 'users/list', book: @book, user: @user %>
			<div class="col-lg-9">
				<h2>My Books</h2>
				<table class="table table-striped">
					<thead>
						<tr>
							<th></th>
							<th>Title</th>
							<th>Opinion</th>
						</tr>
					</thead>
					<tbody>
						<% @user.books.each do |book| %>
						<tr>
							<td><%= link_to user_path(@user) do %>
								<%= attachment_image_tag @user, :image, :fill, 50, 50, format: 'jpeg',fallback: 'no_imag.jpg' %></td>
								<% end %>
							<td><%= link_to book.title, book_path(book), class: "book_#{book.id}" %></td>
							<td><%= book.opinion %></td>
						</tr>
						<% end %>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>
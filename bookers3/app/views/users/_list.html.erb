			<div class="col-lg-3">
				<h2>User info</h2>

				<% if user_signed_in? %>
				<% if user.id == current_user.id %>
				<%= attachment_image_tag user, :image, :fill, 100, 100, format: 'jpeg' %>
				
			
				<table class="table table-striped">
					<thead>
						<tr>
							<th>name</th>
							<th><%= user.name %></th>
						</tr>
					</thead>
					<tbody>
						<tr>
							<td>introduction</td>
							<td><%= user.introduction %></td>
						</tr>
					</tbody>
				</table>

				<%= link_to "" , edit_user_path(user),class: "glyphicon glyphicon-wrench" %>


				<% end %>
				<% end %>

				<h2>New book</h2>
				<%= form_for(book) do |f| %>
				<div class="field"><h4>Title</h4>
					<%= f.text_field :title, class: "book_title" %>
				</div>
				<div class="field"><h4>Opinion</h4>
					<%= f.text_area :opinion, class: "book_opinion" %>
				</div>
				<div class="action"><%= f.submit 'Create Book', class: "btn btn-primary btn-block" %>
				</div>
				<% end %>
			</div>
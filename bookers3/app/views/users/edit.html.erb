<div class="body">
	<div class="container">
		<div class="row">
			<div class="col-lg-2">
				<h2>User info</h2>
				<%= form_for(@user) do |f| %>
				<h4>name</h4>
				<%= f.text_field :name %>
				<h4>画像</h4>
				<%= f.attachment_field :image %>
